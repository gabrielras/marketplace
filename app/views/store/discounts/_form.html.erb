<div class="columns">
  <div class="column is-10 is-offset-2 is-centered">

    <%= form_for [:store, discount ]  do |f| %>
      <% if @discount.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @discount.errors.full_messages.each do |message| %>
            <li class="is-danger" style="color:red"><%= message %></li>
          <% end %>
          </ul> 
        </div><br>
      <% end %>

         <div class="columns">
          <div class="field column is-6">
            <div class="control">
              <label>Título</label> 
              <%= f.text_field :title, :required => true, class: 'input' %>
            </div>
          </div>

         
        </div>
        
        <div class="columns">
           <div class="field column is-3">
            <div class="control">
              <label>Porcentagem de Desconto</label> 
              <%= f.number_field :value, :required => true, class: 'input' %>
            </div>
          </div>

          <div class="field column is-3">
            <div class="control">
              <label>Data de Início</label> 
              <%= f.datetime_local_field :start_time, :required => true, class: 'input' %>
            </div>
          </div>

          <div class="field column is-3">
            <div class="control">
              <label>Data de Encerramento</label> 
              <%= f.datetime_local_field :end_time, :required => true, class: 'input' %>
            </div>
          </div>
        </div>
        <div class="select is-multiple">
          <%= collection_select(:products, :id, Product.where(store_id: current_store.id), :id, :title, {}, {:multiple => true}) %>
        </div>
        <hr />
        <div class="field is-grouped">
          <div class="control">
            <%= f.submit "Salvar", class: 'button is-danger is-outlined is-fullwidth is-uppercase' %>
          </div>
        </div>

      <% end %>
  </div>
</div>
