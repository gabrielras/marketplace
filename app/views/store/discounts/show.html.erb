<div class="columns">
  <div class="column is-3 is-offset-1">
    <div class="box bg-white pa4 border-radius-6">
      <p>Desconto inicial: <%= @discount.value %> %</p><br>
    </div>
    <% if OrderProduct.where(discount_id: @discount.id).blank? %>
      <%= link_to 'Deletar', store_discount_path(@discount), method: :delete, data: { confirm: 'Você tem certeza que deseja excluir' }, class: 'button is-danger is-rounded is-outlined is-fullwidth is-uppercase' %>
    <% end %>
  </div>
  <div class="column is-6 is-offset-1">
    <div class="box bg-white pa4 border-radius-6">
      <div class="field">
        Produto: 
        <% @discount.products.each do |product| %>
          <%= product.title %>,
        <% end %><br>
        Título: <%= @discount.title %>
      </div>

      <div class="field">
        Data de início: <%= @discount.start_time.strftime("%d/%m/%Y, %H:%M h") %><br>
        Data de encerramento: <%= @discount.end_time.strftime("%d/%m/%Y, %H:%M h") %>
      </div>
    </div>
  </div>
</div>
      