<div class="columns is-multiline is-centered">
   <div class="column is-5 has-text-white-ter">
    <h1 class="subtitle has-text-centered">
      Dados da Conta
    </h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "stores/shared/error_messages", resource: resource %>

      <div class="field">
        <label>Título da Loja</label><br />
        <%= f.text_field :title, class: "input" %>
      </div>

      <div class="field">
        <div class="control">
          <%= f.label :name, "Nome do Representante Legal" %>
          <%= f.text_field :name, class: "input" %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.label :surname, "Sobreome do Representante Legal" %>
          <%= f.text_field :surname, class: "input" %>
        </div>
      </div>

      <div class="field">
        <label>Email</label><br />
        <%= f.email_field :email, autocomplete: "email", class: "input" %>
      </div>

      <div class="field">
        <label>Nova Senha</label><p>(Opcional)</p><br />
        <%= f.password_field :password, class: "input", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <label>Senha Atual</label><p>(Nós precisamos da sua senha atual para atualizar)</p><br />
        <%= f.password_field :current_password, :required => true, autocomplete: "current-password", class: "input" %>
      </div>

      <div class="actions">
        <%= f.submit "Atualizar", class: "button is-rounded is-primary is-outlined is-fullwidth is-uppercase" %>
      </div>
    <% end %>
  </div>
</div>
