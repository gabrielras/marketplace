<div class="columns is-multiline is-centered">
   <div class="column is-7">
    <h1 class="subtitle has-text-centered">
      Digite seu endereço
    </h1>

    <%= form_for [:client, @address_client]  do |f| %>
     
       <div class="field is-horizontal">
          <div class="columns field-body">
            <div class="field column is-4">
              <label>Cep (opcional)</label>
              <%= f.text_field :number_cep, class: 'input', id: 'cep' %>
              <p class="help">Seu endereço será completado automaticamente.</p>
            </div>
             <div class="field column is-8">
              <label>Bairro</label>
              <%= f.text_field :neighborhood,:required => true, id:"neighborhood", class: 'input' %>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="columns field-body">
            <div class="field column is-8">
              <label>Rua</label>
              <%= f.text_field :street,:required => true, id:"street", class: "input" %>
            </div>
            <div class="field column is-4">
              <label>Numero de residência</label>
              <%= f.text_field :number_residence,:required => true, class: 'input' %>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="columns field-body">
            <div class="field column">
                <label>Complemento</label>
                <%= f.text_field :complement, class: 'input' %>
            </div>
          </div>
        </div>
         <div class="field is-grouped">
          <div class="control">
            <%= f.submit "Salvar", class: "button is-primary is-outlined is-fullwidth is-uppercase" %>
          </div>
        </div>
    <% end %>
  </div>
   <div class="column is-5 has-text-centered">
    <%= image_tag "720-compressed.jpg" %><br>
  </div>
</div>
